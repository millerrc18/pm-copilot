<% content_for :page_title, "Dashboard" %>
<% content_for :page_subtitle, "Track portfolio health, delivery momentum, and margin in one place." %>
<% content_for :toolbar do %>
  <%= render "shared/ui/button", label: "New program", variant: "primary", url: new_program_path %>
<% end %>

<div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
  <div class="panel p-6">
    <p class="text-sm text-light-text/60">Active programs</p>
    <div class="mt-4 flex items-end justify-between">
      <p class="text-3xl font-semibold"><%= @portfolio_metrics[:active_programs] %></p>
      <span class="text-xs text-light-text/50">Across your portfolio</span>
    </div>
    <div class="mt-4 h-1 rounded-full bg-white/10">
      <div class="h-1 w-2/3 rounded-full bg-accent-red"></div>
    </div>
  </div>
  <div class="panel p-6">
    <p class="text-sm text-light-text/60">Contracts at risk</p>
    <div class="mt-4 flex items-end justify-between">
      <p class="text-3xl font-semibold"><%= @portfolio_metrics[:contracts_at_risk] %></p>
      <span class="text-xs text-light-text/50">Overdue with undelivered units</span>
    </div>
    <div class="mt-4 h-1 rounded-full bg-white/10">
      <div class="h-1 w-1/3 rounded-full bg-accent-red"></div>
    </div>
  </div>
  <div class="panel p-6">
    <p class="text-sm text-light-text/60">On-time delivery</p>
    <div class="mt-4 flex items-end justify-between">
      <p class="text-3xl font-semibold"><%= @portfolio_metrics[:on_time_delivery] %>%</p>
      <span class="text-xs text-light-text/50">Milestones due today or later</span>
    </div>
    <div class="mt-4 h-1 rounded-full bg-white/10">
      <div class="h-1 w-5/6 rounded-full bg-accent-red"></div>
    </div>
  </div>
</div>

<div class="mt-8 panel p-6">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <%= render "shared/ui/chip", label: "Portfolio" %>
      <p class="mt-3 text-sm text-light-text/60">Review program health, contracts, and activity in one place.</p>
    </div>
    <%= render "shared/ui/button", label: "Create program", variant: "ghost", url: new_program_path %>
  </div>
</div>

<% if @programs.any? %>
  <div class="mt-8 grid grid-cols-1 gap-6 xl:grid-cols-2">
    <% @programs.each do |program| %>
      <div class="panel p-6">
        <div class="flex items-start justify-between gap-4">
          <div>
            <h2 class="text-lg font-semibold"><%= link_to program.name, program, class: "hover:text-light-text" %></h2>
            <p class="mt-1 text-sm text-light-text/50"><%= program.customer.presence || "No customer set" %></p>
          </div>
          <%= render "shared/ui/button", label: "View", variant: "ghost", url: program_path(program) %>
        </div>
        <p class="mt-4 text-sm text-light-text/60"><%= truncate(program.description.to_s, length: 140).presence || "No description yet." %></p>
        <div class="mt-6 flex flex-wrap gap-3 text-xs text-light-text/50">
          <span class="rounded-full border border-white/10 px-3 py-1">Updated just now</span>
          <span class="rounded-full border border-white/10 px-3 py-1">Contracts ready</span>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="mt-8">
    <%= render "shared/ui/card", icon: "wand", title: "Create your first program", description: "Add a program to start tracking contracts, milestones, and delivery progress.", footer: render("shared/ui/button", label: "New program", variant: "primary", url: new_program_path) %>
  </div>
<% end %>
