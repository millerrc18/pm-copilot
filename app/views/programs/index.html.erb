<div class="page-header">
  <div>
    <h1>Programs</h1>
    <p class="subtle">A single source of truth for contracts, costs, and unit economics.</p>
  </div>

  <div class="actions">
    <%= link_to "New program", new_program_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if @programs.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Customer</th>
            <th>Description</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @programs.each do |program| %>
            <tr>
              <td><%= link_to program.name, program %></td>
              <td><%= program.customer %></td>
              <td class="subtle"><%= truncate(program.description.to_s, length: 80) %></td>
              <td>
                <div class="actions">
                  <%= link_to "View", program, class: "btn btn-sm" %>
                  <%= link_to "Edit", edit_program_path(program), class: "btn btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="subtle">No programs yet. Create your first program to get started.</p>
      <div class="form-actions">
        <%= link_to "New program", new_program_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
