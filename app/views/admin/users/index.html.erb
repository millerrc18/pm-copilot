<% content_for :page_title, "Users" %>
<% content_for :page_subtitle, "Administrative access overview." %>

<div class="panel p-6">
  <div class="space-y-3">
    <% @users.each do |u| %>
      <div class="flex items-center justify-between rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm">
        <div>
          <p class="font-semibold">User ##<%= u.id %></p>
          <p class="text-xs text-light-text/50"><%= u.email %></p>
        </div>
        <p class="text-xs text-light-text/50"><%= u.created_at&.strftime("%Y-%m-%d %H:%M") %></p>
      </div>
    <% end %>
  </div>
</div>
