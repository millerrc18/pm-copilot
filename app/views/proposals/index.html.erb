<% content_for :page_title, "Proposals" %>
<% content_for :page_subtitle, "Track bids, quotes, and proposal activity before delivery begins." %>
<% content_for :toolbar do %>
  <%= render "shared/ui/button", label: "New proposal", variant: "primary", url: new_proposal_path %>
<% end %>

<div class="panel p-6">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h2 class="text-base font-semibold">Active proposals</h2>
      <p class="mt-1 text-sm text-light-text/60">Stay aligned on bid status and next steps.</p>
    </div>
  </div>

  <div class="mt-4 overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="text-left text-xs uppercase tracking-[0.2em] text-light-text/40">
        <tr>
          <th class="pb-3">Proposal</th>
          <th class="pb-3">Stage</th>
          <th class="pb-3">Value</th>
          <th class="pb-3">Owner</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-white/5">
        <% @proposals.each do |proposal| %>
          <tr>
            <td class="py-3 font-semibold"><%= proposal[:name] %></td>
            <td class="py-3"><%= proposal[:stage] %></td>
            <td class="py-3"><%= proposal[:value] %></td>
            <td class="py-3 text-light-text/60"><%= proposal[:owner] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
