<h1>Contracts</h1>

<div class="table-container">
  <table class="table">
    <thead>
      <tr>
        <th>Contract Code</th>
        <th>Program</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Price per Unit</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @contracts.each do |contract| %>
        <tr>
          <td><%= contract.contract_code %></td>
          <td><%= contract.program.name %></td>
          <td><%= contract.start_date %></td>
          <td><%= contract.end_date %></td>
          <td><%= number_to_currency(contract.sell_price_per_unit) %></td>
          <td><%= link_to 'Show', contract_path(contract) %></td>
          <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
          <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Back to Programs', programs_path %>
