<% content_for :page_title, "Contracts" %>
<% content_for :page_subtitle, "Review contract coverage across all programs." %>

<div class="panel p-6">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h2 class="text-base font-semibold">All contracts</h2>
      <p class="mt-1 text-sm text-light-text/60">Track contract health, program context, and timelines.</p>
    </div>
    <%= render "shared/ui/button", label: "Add contract", variant: "ghost", url: programs_path %>
  </div>

  <%= form_with url: (@program ? program_contracts_path(@program) : contracts_path),
                method: :get,
                local: true,
                class: "mt-4 flex flex-wrap items-end gap-4 text-sm" do |form| %>
    <div class="flex flex-col gap-2">
      <%= form.label :view, "View", class: "text-xs uppercase tracking-[0.2em] text-light-text/40" %>
      <%= form.select :view,
                      options_for_select(
                        [
                          [ "Active this year", "active_this_year" ],
                          [ "Active next year", "active_next_year" ],
                          [ "Active in year", "active_in_year" ],
                          [ "All contracts", "all" ]
                        ],
                        @contracts_view
                      ),
                      {},
                      class: "rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-light-text" %>
    </div>
    <div class="flex flex-col gap-2">
      <%= form.label :year, "Year", class: "text-xs uppercase tracking-[0.2em] text-light-text/40" %>
      <%= form.number_field :year,
                            value: @contracts_view_year,
                            min: 2000,
                            max: Date.current.year + 10,
                            class: "rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-light-text" %>
    </div>
    <div class="flex items-center gap-2 pb-1">
      <%= form.submit "Apply", class: "rounded-full border border-white/10 px-4 py-2 text-xs font-semibold uppercase tracking-[0.2em] text-light-text/80 hover:text-light-text" %>
    </div>
  <% end %>

  <div class="mt-6 overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="text-left text-xs uppercase tracking-[0.2em] text-light-text/40">
        <tr>
          <th class="pb-3">Contract</th>
          <th class="pb-3">Program</th>
          <th class="pb-3">Status</th>
          <th class="pb-3">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-white/5">
        <% if @contracts.any? %>
          <% today = Date.current %>
          <% @contracts.each do |contract| %>
            <% status =
              if contract.end_date < today
                "Completed"
              elsif contract.start_date > today
                "Upcoming"
              else
                "Active"
              end %>
            <tr>
              <td class="py-3 font-semibold"><%= contract.contract_code %></td>
              <td class="py-3"><%= contract.program.name %></td>
              <td class="py-3">
                <span class="rounded-full border border-white/10 px-3 py-1 text-xs"><%= status %></span>
              </td>
              <td class="py-3">
                <div class="flex flex-wrap gap-2">
                  <%= link_to "View", contract_path(contract), class: "text-accent-red hover:text-accent-red/80" %>
                  <%= link_to "Edit", edit_contract_path(contract), class: "text-light-text/70 hover:text-light-text" %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4" class="py-6 text-center text-sm text-light-text/60">No contracts found yet.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
