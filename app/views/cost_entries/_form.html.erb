<%= turbo_frame_tag dom_id(cost_entry, :form) do %>
  <%= form_with(model: cost_entry, local: true, class: "space-y-6", data: { controller: "cost-total" }) do |form| %>
    <% if cost_entry.errors.any? %>
      <div class="rounded-2xl border border-accent-red/40 bg-accent-red/10 p-4 text-sm text-light-text">
        <p class="font-semibold"><%= pluralize(cost_entry.errors.count, "error") %> prohibited this record from being saved:</p>
        <ul class="mt-2 list-disc space-y-1 pl-5 text-light-text/80">
          <% cost_entry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div>
    <%= form.label :program_id, "Program", class: "text-sm font-semibold" %>
    <%= form.select :program_id,
                    options_from_collection_for_select(@programs, :id, :name, cost_entry.program_id),
                    { include_blank: "Select a program" },
                    class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring",
                    required: true %>
    <p class="mt-2 text-xs text-light-text/50">Costs are tracked per program.</p>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div>
      <%= form.label :period_type, class: "text-sm font-semibold" %>
      <%= form.select :period_type, [["Week", "week"], ["Month", "month"]], {}, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= form.label :period_start_date, class: "text-sm font-semibold" %>
      <%= form.date_field :period_start_date, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
  </div>

    <div class="grid gap-4 md:grid-cols-2">
      <div>
        <%= form.label :hours_bam, "Hours BAM", class: "text-sm font-semibold" %>
        <%= form.number_field :hours_bam,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "bam", cost_total_kind: "hours", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">BAM hours booked this period.</p>
    </div>
    <div>
      <%= form.label :rate_bam, "Rate BAM", class: "text-sm font-semibold" %>
        <%= form.number_field :rate_bam,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "bam", cost_total_kind: "rate", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">BAM hourly rate.</p>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div>
      <%= form.label :hours_eng, "Hours ENG", class: "text-sm font-semibold" %>
        <%= form.number_field :hours_eng,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "eng", cost_total_kind: "hours", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">Engineering labor hours.</p>
    </div>
    <div>
      <%= form.label :rate_eng, "Rate ENG", class: "text-sm font-semibold" %>
        <%= form.number_field :rate_eng,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "eng", cost_total_kind: "rate", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">Engineering blended rate.</p>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div>
      <%= form.label :hours_mfg_salary, "Hours MFG Salary", class: "text-sm font-semibold" %>
        <%= form.number_field :hours_mfg_salary,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "mfg-salary", cost_total_kind: "hours", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">Manufacturing salaried hours.</p>
    </div>
    <div>
      <%= form.label :rate_mfg_salary, "Rate MFG Salary", class: "text-sm font-semibold" %>
        <%= form.number_field :rate_mfg_salary,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "mfg-salary", cost_total_kind: "rate", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">Manufacturing salary rate.</p>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div>
      <%= form.label :hours_mfg_hourly, "Hours MFG Hourly", class: "text-sm font-semibold" %>
        <%= form.number_field :hours_mfg_hourly,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "mfg-hourly", cost_total_kind: "hours", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">Manufacturing hourly hours.</p>
    </div>
    <div>
      <%= form.label :rate_mfg_hourly, "Rate MFG Hourly", class: "text-sm font-semibold" %>
        <%= form.number_field :rate_mfg_hourly,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "mfg-hourly", cost_total_kind: "rate", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">Manufacturing hourly rate.</p>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div>
      <%= form.label :hours_touch, "Hours Touch", class: "text-sm font-semibold" %>
        <%= form.number_field :hours_touch,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "touch", cost_total_kind: "hours", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">Touch labor hours.</p>
    </div>
    <div>
      <%= form.label :rate_touch, "Rate Touch", class: "text-sm font-semibold" %>
        <%= form.number_field :rate_touch,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_category: "touch", cost_total_kind: "rate", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        <p class="mt-2 text-xs text-light-text/50">Touch labor rate.</p>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div>
      <%= form.label :material_cost, class: "text-sm font-semibold" %>
        <%= form.number_field :material_cost,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_kind: "material", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= form.label :other_costs, class: "text-sm font-semibold" %>
        <%= form.number_field :other_costs,
                              step: 0.01,
                              placeholder: "0",
                              data: { cost_total_target: "field", cost_total_kind: "other", action: "input->cost-total#recalculate" },
                              class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
  </div>

    <div class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3">
      <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Total cost</p>
      <p class="mt-2 text-2xl font-semibold" data-cost-total-target="total" data-testid="cost-total"><%= number_to_currency(cost_entry.total_cost) %></p>
      <p class="mt-1 text-xs text-light-text/60">Includes labor, materials, and other costs.</p>
    </div>

  <div>
    <%= form.label :notes, class: "text-sm font-semibold" %>
    <%= form.text_area :notes, rows: 3, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
  </div>

    <div class="flex flex-wrap gap-3">
      <%= form.submit(cost_entry.persisted? ? "Save changes" : "Create cost entry",
                      class: "inline-flex items-center justify-center rounded-full bg-accent-red px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent-red/90 focus-ring") %>
      <%= link_to "Cancel", cost_hub_path, class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
    </div>
  <% end %>
<% end %>
