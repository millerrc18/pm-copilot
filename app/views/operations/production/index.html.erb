<% content_for :page_title, "Operations Production" %>
<% content_for :page_subtitle, "Track shop order status, due dates, and operational progress." %>

<div class="flex flex-wrap items-start justify-between gap-4">
  <div>
    <h2 class="text-lg font-semibold">Production board</h2>
    <p class="mt-1 text-sm text-light-text/60">Monitor shop orders and operational flow with status and due-date context.</p>
    <p class="mt-2 text-xs text-light-text/50">
      <%= link_to "Production guide", doc_path("production_dashboard"), class: "text-light-text/70 hover:text-light-text" %>
    </p>
  </div>
  <div class="flex flex-wrap gap-3">
    <%= link_to "Operations imports", ops_imports_path(program_id: @program&.id), class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
  </div>
</div>

<div class="mt-6 panel p-6">
  <%= form_with url: operations_production_path, method: :get, local: true, class: "grid gap-4 md:grid-cols-4" do |f| %>
    <div>
      <%= f.label :program_id, "Program", class: "text-sm font-semibold" %>
      <%= f.select :program_id,
                   options_from_collection_for_select(@programs, :id, :name, @program&.id),
                   { include_blank: "Select a program" },
                   class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :start_date, "Start date", class: "text-sm font-semibold" %>
      <%= f.date_field :start_date, value: @start_date, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :end_date, "End date", class: "text-sm font-semibold" %>
      <%= f.date_field :end_date, value: @end_date, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :status, "Status", class: "text-sm font-semibold" %>
      <%= f.text_field :status, value: @status, placeholder: "Released", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :work_center, "Work center", class: "text-sm font-semibold" %>
      <%= f.text_field :work_center, value: @work_center, placeholder: "Weld", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :part_number, "Part number", class: "text-sm font-semibold" %>
      <%= f.text_field :part_number, value: @part_number, placeholder: "PN-200", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :order_number, "Order number", class: "text-sm font-semibold" %>
      <%= f.text_field :order_number, value: params[:order_number], placeholder: "SO-100", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div class="flex items-end">
      <%= f.hidden_field :tab, value: @tab %>
      <%= f.submit "Apply filters", class: "inline-flex w-full items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
    </div>
  <% end %>

  <div class="mt-4 flex flex-wrap items-center gap-3 text-sm text-light-text/70">
    <%= button_to "Save as default",
                  ops_production_saved_view_path,
                  method: :post,
                  params: { program_id: @program&.id, status: @status, work_center: @work_center, part_number: @part_number, order_number: params[:order_number], start_date: @start_date, end_date: @end_date, tab: @tab },
                  class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-4 py-2 font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
    <% if @saved_filters.present? %>
      <%= button_to "Reset saved view",
                    ops_production_saved_view_path,
                    method: :delete,
                    class: "inline-flex items-center justify-center rounded-full border border-white/10 px-4 py-2 font-semibold text-light-text/70 hover:bg-white/10 focus-ring" %>
      <span><%= @using_saved_filters ? "Saved view applied." : "Saved view is ready to apply on your next visit." %></span>
    <% else %>
      <span>Save the applied filters as your default view.</span>
    <% end %>
  </div>
</div>

<div class="mt-6 grid gap-6 lg:grid-cols-4">
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Total orders</p>
    <p class="mt-2 text-2xl font-semibold"><%= @summary[:total_orders] %></p>
  </div>
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Late orders</p>
    <p class="mt-2 text-2xl font-semibold"><%= @summary[:late_orders] %></p>
  </div>
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">In progress</p>
    <p class="mt-2 text-2xl font-semibold"><%= @summary[:in_progress] %></p>
  </div>
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Due soon</p>
    <p class="mt-2 text-2xl font-semibold"><%= @summary[:due_soon] %></p>
  </div>
</div>

<div class="mt-6 panel p-6">
  <div class="flex flex-wrap items-center gap-3">
    <%= link_to "Orders", operations_production_path(params.permit(:program_id, :status, :work_center, :part_number, :order_number, :start_date, :end_date).merge(tab: "orders")),
                class: "inline-flex items-center justify-center rounded-full px-4 py-2 text-sm font-semibold #{@tab == "orders" ? "bg-white/10" : "border border-white/10"}" %>
    <%= link_to "Operations", operations_production_path(params.permit(:program_id, :status, :work_center, :part_number, :order_number, :start_date, :end_date).merge(tab: "operations")),
                class: "inline-flex items-center justify-center rounded-full px-4 py-2 text-sm font-semibold #{@tab == "operations" ? "bg-white/10" : "border border-white/10"}" %>
  </div>

  <% if @tab == "operations" %>
    <div class="mt-4 overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="text-left text-xs uppercase tracking-[0.2em] text-light-text/40">
          <tr>
            <th class="pb-3">Order</th>
            <th class="pb-3">Operation</th>
            <th class="pb-3">Status</th>
            <th class="pb-3">Work center</th>
            <th class="pb-3">Scheduled</th>
            <th class="pb-3">Actual</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <% if @operations.any? %>
            <% @operations.each do |operation| %>
              <tr>
                <td class="py-3"><%= operation.order_number %></td>
                <td class="py-3"><%= operation.operation_number %></td>
                <td class="py-3"><%= operation.status %></td>
                <td class="py-3"><%= operation.work_center %></td>
                <td class="py-3"><%= [operation.scheduled_start, operation.scheduled_finish].compact.join(" - ") %></td>
                <td class="py-3"><%= [operation.actual_start, operation.actual_finish].compact.join(" - ") %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="py-6 text-center text-light-text/60">No operations match the current filters.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="mt-4 overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="text-left text-xs uppercase tracking-[0.2em] text-light-text/40">
          <tr>
            <th class="pb-3">Order</th>
            <th class="pb-3">Part</th>
            <th class="pb-3">Status</th>
            <th class="pb-3">Due date</th>
            <th class="pb-3">Qty</th>
            <th class="pb-3">Progress</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <% if @orders.any? %>
            <% @orders.each do |order| %>
              <tr>
                <td class="py-3"><%= order.order_number %></td>
                <td class="py-3"><%= order.part_number %></td>
                <td class="py-3"><%= order.status %></td>
                <td class="py-3"><%= order.due_date %></td>
                <td class="py-3"><%= order.order_quantity.to_d %></td>
                <td class="py-3"><%= order.completed_quantity.to_d %> / <%= order.order_quantity.to_d %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="py-6 text-center text-light-text/60">No shop orders match the current filters.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
