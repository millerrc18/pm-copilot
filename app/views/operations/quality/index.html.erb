<% content_for :page_title, "Operations Quality" %>
<% content_for :page_subtitle, "Analyze scrap cost, MRB volume, and defect drivers." %>

<div class="flex flex-wrap items-start justify-between gap-4">
  <div>
    <h2 class="text-lg font-semibold">Quality dashboard</h2>
    <p class="mt-1 text-sm text-light-text/60">Track scrap, MRB, and defect drivers across the program.</p>
    <p class="mt-2 text-xs text-light-text/50">
      <%= link_to "Quality guide", doc_path("quality_dashboard"), class: "text-light-text/70 hover:text-light-text" %>
    </p>
  </div>
  <div class="flex flex-wrap gap-3">
    <%= link_to "Operations imports", ops_imports_path(program_id: @program&.id), class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
  </div>
</div>

<div class="mt-6 panel p-6">
  <%= form_with url: operations_quality_path, method: :get, local: true, class: "grid gap-4 md:grid-cols-4" do |f| %>
    <div>
      <%= f.label :program_id, "Program", class: "text-sm font-semibold" %>
      <%= f.select :program_id,
                   options_from_collection_for_select(@programs, :id, :name, @program&.id),
                   { include_blank: "Select a program" },
                   class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :start_date, "Start date", class: "text-sm font-semibold" %>
      <%= f.date_field :start_date, value: @start_date, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :end_date, "End date", class: "text-sm font-semibold" %>
      <%= f.date_field :end_date, value: @end_date, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :part_number, "Part number", class: "text-sm font-semibold" %>
      <%= f.text_field :part_number, value: @part_number, placeholder: "PN-300", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :reason_code, "Reason code", class: "text-sm font-semibold" %>
      <%= f.text_field :reason_code, value: @reason_code, placeholder: "Scratch", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :disposition, "Disposition", class: "text-sm font-semibold" %>
      <%= f.text_field :disposition, value: @disposition, placeholder: "Rework", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div class="flex items-end">
      <%= f.submit "Apply filters", class: "inline-flex w-full items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
    </div>
  <% end %>

  <div class="mt-4 flex flex-wrap items-center gap-3 text-sm text-light-text/70">
    <%= button_to "Save as default",
                  ops_quality_saved_view_path,
                  method: :post,
                  params: { program_id: @program&.id, part_number: @part_number, reason_code: @reason_code, disposition: @disposition, start_date: @start_date, end_date: @end_date },
                  class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-4 py-2 font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
    <% if @saved_filters.present? %>
      <%= button_to "Reset saved view",
                    ops_quality_saved_view_path,
                    method: :delete,
                    class: "inline-flex items-center justify-center rounded-full border border-white/10 px-4 py-2 font-semibold text-light-text/70 hover:bg-white/10 focus-ring" %>
      <span><%= @using_saved_filters ? "Saved view applied." : "Saved view is ready to apply on your next visit." %></span>
    <% else %>
      <span>Save the applied filters as your default view.</span>
    <% end %>
  </div>
</div>

<div class="mt-6 grid gap-6 lg:grid-cols-4">
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Scrap cost</p>
    <p class="mt-2 text-2xl font-semibold"><%= number_to_currency(@summary[:scrap_cost_total]) %></p>
  </div>
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">MRB open count</p>
    <p class="mt-2 text-2xl font-semibold"><%= @summary[:mrb_open_count] %></p>
  </div>
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Top defect reason</p>
    <p class="mt-2 text-2xl font-semibold"><%= @summary[:top_reason].presence || "None" %></p>
  </div>
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Top part by scrap</p>
    <p class="mt-2 text-2xl font-semibold"><%= @summary[:top_part].presence || "None" %></p>
  </div>
</div>

<div class="mt-6 grid gap-6 lg:grid-cols-2">
  <div class="panel p-6">
    <div class="flex items-center justify-between gap-4">
      <div>
        <h3 class="text-base font-semibold">Pareto by reason</h3>
        <p class="mt-1 text-sm text-light-text/60">Top scrap reasons by total cost.</p>
      </div>
    </div>
    <div class="mt-4 h-56 overflow-hidden sm:h-64">
      <canvas
        class="h-full w-full max-w-full"
        data-controller="chart"
        data-chart-type-value="bar"
        data-chart-labels-value="<%= @reason_labels.to_json %>"
        data-chart-datasets-value="<%= [{ label: "Scrap cost", data: @reason_values }].to_json %>"></canvas>
    </div>
  </div>
  <div class="panel p-6">
    <div class="flex items-center justify-between gap-4">
      <div>
        <h3 class="text-base font-semibold">Scrap cost trend</h3>
        <p class="mt-1 text-sm text-light-text/60">Trend of scrap cost over time.</p>
      </div>
    </div>
    <div class="mt-4 h-56 overflow-hidden sm:h-64">
      <canvas
        class="h-full w-full max-w-full"
        data-controller="chart"
        data-chart-type-value="line"
        data-chart-labels-value="<%= @time_labels.to_json %>"
        data-chart-datasets-value="<%= [{ label: "Scrap cost", data: @time_values }].to_json %>"></canvas>
    </div>
  </div>
</div>

<div class="mt-6 grid gap-6 lg:grid-cols-2">
  <div class="panel p-6">
    <div class="flex items-center justify-between gap-4">
      <div>
        <h3 class="text-base font-semibold">Scrap records</h3>
        <p class="mt-1 text-sm text-light-text/60">Individual scrap transactions with sortable cost.</p>
      </div>
    </div>
    <div class="mt-4 overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="text-left text-xs uppercase tracking-[0.2em] text-light-text/40">
          <tr>
            <th class="pb-3">Date</th>
            <th class="pb-3">Part</th>
            <th class="pb-3">Reason</th>
            <th class="pb-3">Cost</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <% if @scrap_records.any? %>
            <% @scrap_records.each do |record| %>
              <tr>
                <td class="py-3"><%= record.scrap_date %></td>
                <td class="py-3"><%= record.part_number %></td>
                <td class="py-3"><%= record.reason_code %></td>
                <td class="py-3"><%= number_to_currency(record.scrap_cost.to_d) %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="py-6 text-center text-light-text/60">No scrap records match the current filters.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="panel p-6">
    <div class="flex items-center justify-between gap-4">
      <div>
        <h3 class="text-base font-semibold">MRB records</h3>
        <p class="mt-1 text-sm text-light-text/60">MRB status, disposition, and cost detail.</p>
      </div>
    </div>
    <div class="mt-4 overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="text-left text-xs uppercase tracking-[0.2em] text-light-text/40">
          <tr>
            <th class="pb-3">MRB</th>
            <th class="pb-3">Status</th>
            <th class="pb-3">Disposition</th>
            <th class="pb-3">Cost</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <% if @mrb_records.any? %>
            <% @mrb_records.each do |record| %>
              <tr>
                <td class="py-3"><%= record.mrb_number %></td>
                <td class="py-3"><%= record.status %></td>
                <td class="py-3"><%= record.disposition %></td>
                <td class="py-3"><%= number_to_currency(record.extended_cost.to_d) %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="py-6 text-center text-light-text/60">No MRB records match the current filters.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
