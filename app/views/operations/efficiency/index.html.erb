<% content_for :page_title, "Operations Efficiency" %>
<% content_for :page_subtitle, "Compare planned vs actual labor and variance by period." %>

<div class="flex flex-wrap items-start justify-between gap-4">
  <div>
    <h2 class="text-lg font-semibold">Efficiency dashboard</h2>
    <p class="mt-1 text-sm text-light-text/60">Review planned and actual labor with variance trends.</p>
    <p class="mt-2 text-xs text-light-text/50">
      <%= link_to "Efficiency guide", doc_path("efficiency_dashboard"), class: "text-light-text/70 hover:text-light-text" %>
    </p>
  </div>
  <div class="flex flex-wrap gap-3">
    <%= link_to "Operations imports", ops_imports_path(program_id: @program&.id), class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
  </div>
</div>

<% if @operations_empty %>
  <%= render "operations/empty_state", program_id: @program&.id %>
<% end %>

<div class="mt-6 panel p-6">
  <%= form_with url: operations_efficiency_path, method: :get, local: true, class: "grid gap-4 md:grid-cols-4" do |f| %>
    <div>
      <%= f.label :program_id, "Program", class: "text-sm font-semibold" %>
      <%= f.select :program_id,
                   options_from_collection_for_select(@programs, :id, :name, @program&.id),
                   { include_blank: "Select a program" },
                   class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :start_date, "Start date", class: "text-sm font-semibold" %>
      <%= f.date_field :start_date, value: @start_date, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :end_date, "End date", class: "text-sm font-semibold" %>
      <%= f.date_field :end_date, value: @end_date, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :labor_category, "Labor category", class: "text-sm font-semibold" %>
      <%= f.text_field :labor_category, value: @labor_category, placeholder: "MFG", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div>
      <%= f.label :work_center, "Work center", class: "text-sm font-semibold" %>
      <%= f.text_field :work_center, value: @work_center, placeholder: "Assembly", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
    </div>
    <div class="flex items-end">
      <%= f.submit "Apply filters", class: "inline-flex w-full items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
    </div>
  <% end %>

  <div class="mt-4 flex flex-wrap items-center gap-3 text-sm text-light-text/70">
    <%= button_to "Save as default",
                  ops_efficiency_saved_view_path,
                  method: :post,
                  params: { program_id: @program&.id, labor_category: @labor_category, work_center: @work_center, start_date: @start_date, end_date: @end_date },
                  class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-4 py-2 font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
    <% if @saved_filters.present? %>
      <%= button_to "Reset saved view",
                    ops_efficiency_saved_view_path,
                    method: :delete,
                    class: "inline-flex items-center justify-center rounded-full border border-white/10 px-4 py-2 font-semibold text-light-text/70 hover:bg-white/10 focus-ring" %>
      <span><%= @using_saved_filters ? "Saved view applied." : "Saved view is ready to apply on your next visit." %></span>
    <% else %>
      <span>Save the applied filters as your default view.</span>
    <% end %>
  </div>
</div>

<div class="mt-6 grid gap-6 lg:grid-cols-4">
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Planned hours</p>
    <p class="mt-2 text-2xl font-semibold"><%= number_with_precision(@summary[:planned], precision: 1) %></p>
  </div>
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Actual hours</p>
    <p class="mt-2 text-2xl font-semibold"><%= number_with_precision(@summary[:actual], precision: 1) %></p>
  </div>
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Variance hours</p>
    <p class="mt-2 text-2xl font-semibold"><%= number_with_precision(@summary[:variance], precision: 1) %></p>
  </div>
  <div class="panel p-5">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/50">Variance percent</p>
    <p class="mt-2 text-2xl font-semibold"><%= @summary[:variance_percent].present? ? number_to_percentage(@summary[:variance_percent], precision: 1) : "N A" %></p>
  </div>
</div>

<div class="mt-6 grid gap-6 lg:grid-cols-2">
  <div class="panel p-6">
    <div class="flex items-center justify-between gap-4">
      <div>
        <h3 class="text-base font-semibold">Planned vs actual</h3>
        <p class="mt-1 text-sm text-light-text/60">Compare planned and actual hours across periods.</p>
      </div>
    </div>
    <div class="mt-4 h-56 overflow-hidden sm:h-64">
      <canvas
        class="h-full w-full max-w-full"
        data-controller="chart"
        data-chart-type-value="line"
        data-chart-labels-value="<%= @trend_labels.to_json %>"
        data-chart-datasets-value="<%= [
          { label: "Planned", data: @planned_values },
          { label: "Actual", data: @actual_values }
        ].to_json %>"></canvas>
    </div>
  </div>
  <div class="panel p-6">
    <div class="flex items-center justify-between gap-4">
      <div>
        <h3 class="text-base font-semibold">Variance by period</h3>
        <p class="mt-1 text-sm text-light-text/60">Positive values indicate overrun.</p>
      </div>
    </div>
    <div class="mt-4 h-56 overflow-hidden sm:h-64">
      <canvas
        class="h-full w-full max-w-full"
        data-controller="chart"
        data-chart-type-value="bar"
        data-chart-labels-value="<%= @trend_labels.to_json %>"
        data-chart-datasets-value="<%= [{ label: "Variance", data: @variance_values }].to_json %>"></canvas>
    </div>
  </div>
</div>

<div class="mt-6 panel p-6">
  <div class="flex items-center justify-between gap-4">
    <div>
      <h3 class="text-base font-semibold">Weekly detail</h3>
      <p class="mt-1 text-sm text-light-text/60">Planned, actual, and variance by period start.</p>
    </div>
  </div>

  <div class="mt-4 overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="text-left text-xs uppercase tracking-[0.2em] text-light-text/40">
        <tr>
          <th class="pb-3">Period start</th>
          <th class="pb-3">Planned</th>
          <th class="pb-3">Actual</th>
          <th class="pb-3">Variance</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-white/5">
        <% if @entries.any? %>
          <% @entries.each do |entry| %>
            <tr>
              <td class="py-3"><%= entry.period_start %></td>
              <td class="py-3"><%= number_with_precision(entry.planned_hours.to_d, precision: 1) %></td>
              <td class="py-3"><%= number_with_precision(entry.actual_hours.to_d, precision: 1) %></td>
              <td class="py-3"><%= number_with_precision(entry.variance_hours.to_d, precision: 1) %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4" class="py-6 text-center text-light-text/60">No efficiency records match the current filters.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
