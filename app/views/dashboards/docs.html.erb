<% content_for :page_title, "Docs" %>
<% content_for :page_subtitle, "Bring your knowledge base into a unified workspace." %>
<% content_for :toolbar do %>
  <%= render "shared/ui/button", label: "New doc", variant: "primary", url: "#" %>
<% end %>

<% content_for :right_panel do %>
  <div class="flex items-center justify-between">
    <h3 class="text-sm font-semibold">Recent files</h3>
    <div class="flex gap-2">
      <%= render "shared/ui/button", label: "⋯", variant: "icon", url: "#" %>
      <%= render "shared/ui/button", label: "↻", variant: "icon", url: "#" %>
    </div>
  </div>

  <div class="panel-border bg-white/5 p-4 text-sm">
    <p class="font-semibold">Design system updates</p>
    <p class="mt-1 text-xs text-light-text/50">Shared by Ava · 1.2 MB</p>
    <p class="text-xs text-light-text/50">Created 2 hours ago</p>
    <div class="mt-3">
      <%= render "shared/ui/button", label: "Details", variant: "ghost", url: "#" %>
    </div>
  </div>

  <div class="panel-border bg-white/5 p-4 text-sm">
    <p class="font-semibold">Program kickoff notes</p>
    <p class="mt-1 text-xs text-light-text/50">Shared by Miles · 640 KB</p>
    <p class="text-xs text-light-text/50">Created yesterday</p>
    <div class="mt-3">
      <%= render "shared/ui/button", label: "Details", variant: "ghost", url: "#" %>
    </div>
  </div>

  <div class="panel-border bg-white/5 p-4 text-sm">
    <p class="font-semibold">Vendor SOPs</p>
    <p class="mt-1 text-xs text-light-text/50">Shared by Carmen · 320 KB</p>
    <p class="text-xs text-light-text/50">Created 2 days ago</p>
    <div class="mt-3">
      <%= render "shared/ui/button", label: "Details", variant: "ghost", url: "#" %>
    </div>
  </div>
<% end %>

<div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
  <%= render "shared/ui/card", icon: "pin", title: "Quick start", description: "Connect your workspace and start organizing milestones." do %>
    <%= render "shared/ui/button", label: "Connect", variant: "ghost", url: "#" %>
  <% end %>

  <%= render "shared/ui/card", icon: "stack", title: "Program templates", description: "Jump into the most common delivery workflows." do %>
    <%= render "shared/ui/button", label: "Browse", variant: "ghost", url: "#" %>
  <% end %>

  <%= render "shared/ui/card", icon: "sparkles", title: "AI summaries", description: "Let Copilot create weekly status briefs automatically." do %>
    <%= render "shared/ui/button", label: "Enable", variant: "ghost", url: "#" %>
  <% end %>

  <%= render "shared/ui/card", icon: "chart", title: "Portfolio analytics", description: "Monitor program health with real-time rollups." do %>
    <%= render "shared/ui/button", label: "Open", variant: "ghost", url: "#" %>
  <% end %>

  <%= render "shared/ui/card", icon: "compass", title: "Risk tracker", description: "Stay ahead of delays with targeted alerts." do %>
    <%= render "shared/ui/button", label: "Review", variant: "ghost", url: "#" %>
  <% end %>

  <%= render "shared/ui/card", icon: "link", title: "Integrations", description: "Sync deliverables with your CRM and ticketing tools." do %>
    <%= render "shared/ui/button", label: "Connect", variant: "ghost", url: "#" %>
  <% end %>
</div>

<div class="mt-8 panel p-6">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h3 class="text-lg font-semibold">Shortcuts</h3>
      <p class="text-sm text-light-text/60">Pin your most-used actions for quick access.</p>
    </div>
    <%= render "shared/ui/button", label: "Manage", variant: "ghost", url: "#" %>
  </div>
  <div class="mt-4 grid gap-4 md:grid-cols-3">
    <div class="panel-border bg-white/5 p-4 text-sm">
      <p class="font-semibold">New report</p>
      <p class="mt-1 text-xs text-light-text/50">Generate KPI digest</p>
    </div>
    <div class="panel-border bg-white/5 p-4 text-sm">
      <p class="font-semibold">Import template</p>
      <p class="mt-1 text-xs text-light-text/50">Upload costs + units</p>
    </div>
    <div class="panel-border bg-white/5 p-4 text-sm">
      <p class="font-semibold">Invite teammate</p>
      <p class="mt-1 text-xs text-light-text/50">Add owners to programs</p>
    </div>
  </div>
</div>
