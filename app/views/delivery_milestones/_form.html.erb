<% form_url = delivery_milestone.persisted? ? delivery_milestone_path(delivery_milestone) : contract_delivery_milestones_path(@contract) %>

<%= form_with model: delivery_milestone, url: form_url, local: true, class: "space-y-6", html: { autocomplete: "off" } do |form| %>
  <% if delivery_milestone.errors.any? %>
    <div class="rounded-2xl border border-accent-red/40 bg-accent-red/10 p-4 text-sm text-light-text">
      <p class="font-semibold"><%= pluralize(delivery_milestone.errors.count, "error") %> prevented saving:</p>
      <ul class="mt-2 list-disc space-y-1 pl-5 text-light-text/80">
        <% delivery_milestone.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :milestone_ref, "Milestone reference", class: "text-sm font-semibold" %>
    <%= form.text_field :milestone_ref, placeholder: "FY25-JAN, FY25-FEB, etc.", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
  </div>

  <div>
    <%= form.label :due_date, "Promise date", class: "text-sm font-semibold" %>
    <%= form.date_select :due_date, { include_blank: true }, class: "mt-2 rounded-2xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-light-text focus-ring" %>
  </div>

  <div>
    <%= form.label :quantity_due, class: "text-sm font-semibold" %>
    <%= form.number_field :quantity_due, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
  </div>

  <div>
    <%= form.label :notes, class: "text-sm font-semibold" %>
    <%= form.text_area :notes, rows: 3, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
  </div>

  <div class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-xs font-semibold uppercase tracking-[0.2em] text-light-text/50">
    Amendment (optional)
  </div>

  <div>
    <%= form.label :amendment_code, class: "text-sm font-semibold" %>
    <%= form.text_field :amendment_code, placeholder: "A1, P0002, etc.", class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
  </div>

  <div>
    <%= form.label :amendment_effective_date, class: "text-sm font-semibold" %>
    <%= form.date_select :amendment_effective_date, { include_blank: true }, class: "mt-2 rounded-2xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-light-text focus-ring" %>
  </div>

  <div>
    <%= form.label :amendment_notes, class: "text-sm font-semibold" %>
    <%= form.text_area :amendment_notes, rows: 3, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
  </div>

  <div class="flex flex-wrap gap-3">
    <%= form.submit(delivery_milestone.persisted? ? "Update milestone" : "Create milestone", class: "inline-flex items-center justify-center rounded-full bg-accent-red px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent-red/90 focus-ring") %>
    <%= link_to "Cancel", contract_path(@contract || delivery_milestone.contract), class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
  </div>
<% end %>
