<% content_for :page_title, "Planning Hub" %>
<% content_for :page_subtitle, "Align initiatives, milestones, and dependencies in one workspace." %>
<p class="text-xs text-light-text/50">
  <%= link_to "Planning Hub guide", doc_path("planning-hub"), class: "text-light-text/70 hover:text-light-text" %>
</p>

<% if @selected_program.present? %>
  <div class="panel p-6">
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div>
        <h2 class="text-lg font-semibold">Planning filters</h2>
        <p class="mt-1 text-sm text-light-text/60">Program scope is required for planning views.</p>
      </div>
      <div class="flex flex-wrap gap-3">
        <div data-controller="modal">
          <button type="button"
                  class="inline-flex items-center justify-center rounded-full bg-accent-red px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent-red/90 focus-ring"
                  data-action="click->modal#open">
            New plan item
          </button>
          <dialog data-modal-target="dialog" <%= "open" if params[:new_item].present? %> class="w-full max-w-2xl rounded-3xl border border-white/10 bg-dark-panel-strong p-0 text-left text-light-text">
            <div class="flex items-center justify-between border-b border-white/10 px-6 py-4">
              <h3 class="text-sm font-semibold">Create plan item</h3>
              <button type="button" class="text-light-text/60 hover:text-light-text" data-action="modal#close">Close</button>
            </div>
            <div class="p-6">
              <%= form_with model: @plan_item, url: plan_items_path, local: true, class: "space-y-4" do |form| %>
                <%= form.hidden_field :program_id, value: @selected_program.id %>
                <div>
                  <%= form.label :title, class: "text-sm font-semibold" %>
                  <%= form.text_field :title, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                </div>
                <div>
                  <%= form.label :description, class: "text-sm font-semibold" %>
                  <%= form.text_area :description, rows: 3, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                </div>
                <div class="grid gap-4 md:grid-cols-2">
                  <div>
                    <%= form.label :item_type, "Item type", class: "text-sm font-semibold" %>
                    <%= form.select :item_type, PlanItem::ITEM_TYPES.map { |type| [type.titleize, type] }, {},
                                    class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                  </div>
                  <div>
                    <%= form.label :status, class: "text-sm font-semibold" %>
                    <%= form.select :status, PlanItem::STATUSES.map { |status| [status.titleize, status] }, {},
                                    class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                  </div>
                </div>
                <div class="grid gap-4 md:grid-cols-2">
                  <div>
                    <%= form.label :start_on, "Start date", class: "text-sm font-semibold" %>
                    <%= form.date_field :start_on, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                  </div>
                  <div>
                    <%= form.label :due_on, "Due date", class: "text-sm font-semibold" %>
                    <%= form.date_field :due_on, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                  </div>
                </div>
                <div class="grid gap-4 md:grid-cols-2">
                  <div>
                    <%= form.label :percent_complete, "Percent complete", class: "text-sm font-semibold" %>
                    <%= form.number_field :percent_complete, min: 0, max: 100, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                  </div>
                  <div>
                    <%= form.label :contract_id, "Contract", class: "text-sm font-semibold" %>
                    <%= form.select :contract_id, options_from_collection_for_select(@selected_program.contracts.order(:contract_code), :id, :contract_code),
                                    { include_blank: "No contract" },
                                    class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                  </div>
                </div>
                <div>
                  <%= form.label :owner_id, "Owner", class: "text-sm font-semibold" %>
                  <%= form.select :owner_id, options_from_collection_for_select([current_user], :id, :email),
                                  { include_blank: "Unassigned" },
                                  class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                </div>
                <div class="flex flex-wrap gap-3">
                  <%= form.submit "Create item", class: "inline-flex items-center justify-center rounded-full bg-accent-red px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent-red/90 focus-ring" %>
                  <button type="button" class="inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" data-action="modal#close">Cancel</button>
                </div>
              <% end %>
            </div>
          </dialog>
        </div>
      </div>
    </div>

    <%= form_with url: planning_hub_path, method: :get, local: true, class: "mt-4 grid gap-4 md:grid-cols-3" do |form| %>
      <div>
        <%= form.label :program_id, "Program", class: "text-sm font-semibold" %>
        <%= form.select :program_id,
                        options_from_collection_for_select(@programs, :id, :name, @filters["program_id"]),
                        { include_blank: "Select a program" },
                        class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
      </div>
      <div>
        <%= form.label :item_type, "Item type", class: "text-sm font-semibold" %>
        <%= form.select :item_type,
                        [["All items", ""]] + PlanItem::ITEM_TYPES.map { |type| [type.titleize, type] },
                        { selected: @filters["item_type"] },
                        class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
      </div>
      <div>
        <%= form.label :status, "Status", class: "text-sm font-semibold" %>
        <%= form.select :status,
                        [["All statuses", ""]] + PlanItem::STATUSES.map { |status| [status.titleize, status] },
                        { selected: @filters["status"] },
                        class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
      </div>
      <div>
        <%= form.label :owner_id, "Owner", class: "text-sm font-semibold" %>
        <%= form.select :owner_id,
                        options_from_collection_for_select([current_user], :id, :email, @filters["owner_id"]),
                        { include_blank: "All owners" },
                        class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
      </div>
      <div class="flex items-end gap-2">
        <%= form.hidden_field :view, value: @selected_view %>
        <%= form.submit "Apply filters", class: "inline-flex items-center justify-center rounded-full bg-accent-red px-4 py-2.5 text-sm font-semibold text-white transition hover:bg-accent-red/90 focus-ring" %>
        <%= link_to "Reset", planning_hub_path, class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-4 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
      </div>
    <% end %>

    <div class="mt-4 flex flex-wrap items-center gap-3 text-sm text-light-text/70">
      <%= button_to "Save as default",
                    planning_hub_saved_view_path,
                    method: :post,
                    params: @filters.merge(view: @selected_view),
                    class: "inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-4 py-2 font-semibold text-light-text/80 hover:bg-white/10 focus-ring" %>
      <% if current_user.planning_hub_saved_filters.present? %>
        <%= button_to "Reset saved view",
                      planning_hub_saved_view_path,
                      method: :delete,
                      class: "inline-flex items-center justify-center rounded-full border border-white/10 px-4 py-2 font-semibold text-light-text/70 hover:bg-white/10 focus-ring" %>
        <span><%= @using_saved_filters ? "Saved view applied." : "Saved view is ready to apply on your next visit." %></span>
      <% else %>
        <span>Save the applied filters as your default view.</span>
      <% end %>
    </div>
  </div>

  <div class="mt-6 flex flex-wrap gap-3 text-sm font-semibold text-light-text/70">
    <%= link_to "Timeline", planning_hub_path(@filters.merge(view: "timeline")),
                class: "rounded-full border border-white/10 px-4 py-2 #{@selected_view == 'timeline' ? 'bg-white/10 text-light-text' : 'hover:bg-white/5'}" %>
    <%= link_to "List", planning_hub_path(@filters.merge(view: "list")),
                class: "rounded-full border border-white/10 px-4 py-2 #{@selected_view == 'list' ? 'bg-white/10 text-light-text' : 'hover:bg-white/5'}" %>
    <%= link_to "Dependencies", planning_hub_path(@filters.merge(view: "dependencies")),
                class: "rounded-full border border-white/10 px-4 py-2 #{@selected_view == 'dependencies' ? 'bg-white/10 text-light-text' : 'hover:bg-white/5'}" %>
  </div>

  <% if @selected_view == "dependencies" %>
    <div class="mt-6 panel p-6">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
          <h2 class="text-lg font-semibold">Dependencies</h2>
          <p class="text-sm text-light-text/60">Visualize predecessor and successor relationships.</p>
        </div>
      </div>
      <%= form_with url: plan_dependencies_path, method: :post, local: true, class: "mt-4 grid gap-4 md:grid-cols-4" do |form| %>
        <div>
          <%= form.label :predecessor_id, "Predecessor", class: "text-sm font-semibold" %>
          <%= form.select :predecessor_id,
                          options_from_collection_for_select(@plan_items, :id, :title),
                          { include_blank: "Select" },
                          class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        </div>
        <div>
          <%= form.label :successor_id, "Successor", class: "text-sm font-semibold" %>
          <%= form.select :successor_id,
                          options_from_collection_for_select(@plan_items, :id, :title),
                          { include_blank: "Select" },
                          class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        </div>
        <div>
          <%= form.label :dependency_type, "Type", class: "text-sm font-semibold" %>
          <%= form.select :dependency_type,
                          PlanDependency::TYPES.map { |type| [type.titleize, type] },
                          {},
                          class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
        </div>
        <div class="flex items-end">
          <%= form.submit "Add dependency", class: "inline-flex w-full items-center justify-center rounded-full bg-accent-red px-4 py-2.5 text-sm font-semibold text-white transition hover:bg-accent-red/90 focus-ring" %>
        </div>
      <% end %>

      <% if @dependencies.any? %>
        <div class="mt-6 space-y-3">
          <% @dependencies.each do |dependency| %>
            <div class="flex flex-wrap items-center justify-between gap-4 rounded-2xl border border-white/10 bg-white/5 p-4">
              <div>
                <p class="text-sm font-semibold"><%= dependency.predecessor.title %> → <%= dependency.successor.title %></p>
                <p class="mt-1 text-xs text-light-text/50"><%= dependency.dependency_type.titleize %> dependency</p>
              </div>
              <%= button_to "Remove", plan_dependency_path(dependency), method: :delete,
                            class: "text-xs font-semibold text-accent-red hover:text-accent-red/80" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="mt-4 text-sm text-light-text/60">No dependencies yet. Add one to visualize sequencing.</p>
      <% end %>
    </div>
  <% elsif @selected_view == "list" %>
    <div class="mt-6 panel p-6">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
          <h2 class="text-lg font-semibold">Plan items</h2>
          <p class="text-sm text-light-text/60"><%= @plan_items.count %> items</p>
        </div>
      </div>
      <div class="mt-4 overflow-x-auto">
        <table class="w-full text-sm">
          <thead class="text-left text-xs uppercase tracking-[0.2em] text-light-text/40">
            <tr>
              <th class="pb-3">Title</th>
              <th class="pb-3">Type</th>
              <th class="pb-3">Status</th>
              <th class="pb-3">Start</th>
              <th class="pb-3">Due</th>
              <th class="pb-3">Dependencies</th>
              <th class="pb-3">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/5">
            <% @plan_items.each do |item| %>
              <tr data-testid="plan-item-row-<%= item.id %>">
                <td class="py-3 font-semibold"><%= item.title %></td>
                <td class="py-3"><%= item.item_type.titleize %></td>
                <td class="py-3"><%= item.status.titleize %></td>
                <td class="py-3"><%= item.start_on&.strftime("%b %-d, %Y") || "-" %></td>
                <td class="py-3"><%= item.due_on&.strftime("%b %-d, %Y") || "-" %></td>
                <td class="py-3"><%= item.incoming_dependencies.count + item.outgoing_dependencies.count %></td>
                <td class="py-3">
                  <div class="flex flex-wrap gap-2">
                    <%= button_to "Delete", plan_item_path(item), method: :delete,
                                  class: "text-xs font-semibold text-accent-red hover:text-accent-red/80" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="mt-6 space-y-4">
      <% if @plan_items.any? %>
        <% @plan_items.each do |item| %>
          <div class="panel p-5" data-testid="planning-item-<%= item.id %>">
            <div class="flex flex-wrap items-start justify-between gap-4">
              <div>
                <p class="text-xs uppercase tracking-[0.2em] text-light-text/50"><%= item.item_type.titleize %></p>
                <p class="mt-2 text-lg font-semibold"><%= item.title %></p>
                <p class="mt-1 text-sm text-light-text/60"><%= item.description.presence || "No description" %></p>
                <p class="mt-2 text-xs text-light-text/50">
                  <%= item.program.name %>
                  · Status <%= item.status.titleize %>
                  <% if item.start_on.present? || item.due_on.present? %>
                    · <%= item.start_on&.strftime("%b %-d, %Y") || "-" %> to <%= item.due_on&.strftime("%b %-d, %Y") || "-" %>
                  <% end %>
                  · Dependencies <%= item.incoming_dependencies.count + item.outgoing_dependencies.count %>
                </p>
              </div>
              <div class="text-right">
                <div data-controller="modal">
                  <button type="button"
                          class="inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-4 py-2 text-xs font-semibold text-light-text/80 hover:bg-white/10 focus-ring"
                          data-action="click->modal#open">
                    Edit
                  </button>
                  <dialog data-modal-target="dialog" data-testid="planning-item-modal-<%= item.id %>" <%= "open" if params[:edit_item_id].to_s == item.id.to_s %> class="w-full max-w-2xl rounded-3xl border border-white/10 bg-dark-panel-strong p-0 text-left text-light-text">
                    <div class="flex items-center justify-between border-b border-white/10 px-6 py-4">
                      <h3 class="text-sm font-semibold">Edit <%= item.title %></h3>
                      <button type="button" class="text-light-text/60 hover:text-light-text" data-action="modal#close">Close</button>
                    </div>
                    <div class="p-6">
                      <%= form_with model: item, url: plan_item_path(item), method: :patch, local: true, class: "space-y-4" do |form| %>
                        <%= form.hidden_field :program_id, value: @selected_program.id %>
                        <div>
                          <%= form.label :title, class: "text-sm font-semibold" %>
                          <%= form.text_field :title, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                        </div>
                        <div>
                          <%= form.label :description, class: "text-sm font-semibold" %>
                          <%= form.text_area :description, rows: 3, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                        </div>
                        <div class="grid gap-4 md:grid-cols-2">
                          <div>
                            <%= form.label :item_type, "Item type", class: "text-sm font-semibold" %>
                            <%= form.select :item_type, PlanItem::ITEM_TYPES.map { |type| [type.titleize, type] }, {},
                                            class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                          </div>
                          <div>
                            <%= form.label :status, class: "text-sm font-semibold" %>
                            <%= form.select :status, PlanItem::STATUSES.map { |status| [status.titleize, status] }, {},
                                            class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                          </div>
                        </div>
                        <div class="grid gap-4 md:grid-cols-2">
                          <div>
                            <%= form.label :start_on, "Start date", class: "text-sm font-semibold" %>
                            <%= form.date_field :start_on, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                          </div>
                          <div>
                            <%= form.label :due_on, "Due date", class: "text-sm font-semibold" %>
                            <%= form.date_field :due_on, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                          </div>
                        </div>
                        <div class="grid gap-4 md:grid-cols-2">
                          <div>
                            <%= form.label :percent_complete, "Percent complete", class: "text-sm font-semibold" %>
                            <%= form.number_field :percent_complete, min: 0, max: 100, class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                          </div>
                          <div>
                            <%= form.label :contract_id, "Contract", class: "text-sm font-semibold" %>
                            <%= form.select :contract_id, options_from_collection_for_select(@selected_program.contracts.order(:contract_code), :id, :contract_code, item.contract_id),
                                            { include_blank: "No contract" },
                                            class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                          </div>
                        </div>
                        <div>
                          <%= form.label :owner_id, "Owner", class: "text-sm font-semibold" %>
                          <%= form.select :owner_id, options_from_collection_for_select([current_user], :id, :email, item.owner_id),
                                          { include_blank: "Unassigned" },
                                          class: "mt-2 w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-light-text focus-ring" %>
                        </div>
                        <div class="flex flex-wrap gap-3">
                          <%= form.submit "Save changes", class: "inline-flex items-center justify-center rounded-full bg-accent-red px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent-red/90 focus-ring" %>
                          <button type="button" class="inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-5 py-2.5 text-sm font-semibold text-light-text/80 hover:bg-white/10 focus-ring" data-action="modal#close">Cancel</button>
                        </div>
                      <% end %>
                    </div>
                  </dialog>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="panel p-6">
          <p class="text-sm text-light-text/60">No plan items yet. Add one to build a timeline.</p>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="panel p-6">
    <p class="text-sm text-light-text/60">Add a program to start planning.</p>
    <div class="mt-4">
      <%= link_to "Create program", new_program_path, class: "inline-flex items-center justify-center rounded-full bg-accent-red px-4 py-2.5 text-sm font-semibold text-white transition hover:bg-accent-red/90 focus-ring" %>
    </div>
  </div>
<% end %>
