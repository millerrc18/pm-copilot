<aside class="sidebar fixed inset-y-0 left-0 z-40 flex w-72 -translate-x-full flex-col gap-6 border-r border-white/10 bg-dark-panel-strong px-5 py-6 transition duration-300 md:static md:translate-x-0 md:shadow-none" data-sidebar-target="sidebar">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3">
      <span class="flex h-10 w-10 items-center justify-center rounded-2xl bg-accent-red/20 text-accent-red">
        <svg class="icon-md" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3l1.8 4.2L18 9l-4.2 1.8L12 15l-1.8-4.2L6 9l4.2-1.8L12 3z" />
        </svg>
      </span>
      <div>
        <p class="text-sm font-semibold">PM Copilot</p>
        <p class="text-xs text-light-text/50">Program workspace</p>
      </div>
    </div>
    <button class="rounded-full p-2 text-light-text/60 hover:text-light-text hover:bg-white/10 md:hidden focus-ring" data-action="sidebar#close" aria-label="Close menu">
      <svg class="icon-sm" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 6l12 12M18 6l-12 12" />
      </svg>
    </button>
  </div>

  <div>
    <%= render "shared/ui/input",
               placeholder: "Search workspace & docs",
               hotkey: search_keytip,
               search_keytip: true,
               form_action: search_path %>
  </div>

  <div class="space-y-3" data-testid="sidebar-group-workspace">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/40">Workspace</p>
    <nav class="space-y-2 sidebar-nav">
      <%= render "shared/ui/nav_item", label: "Programs", url: programs_path, icon: "folder", active: controller_name == "programs" %>
      <%= render "shared/ui/nav_item", label: "Cost Hub", url: cost_hub_path, icon: "currency", active: %w[cost_entries cost_imports].include?(controller_name) %>
      <%= render "shared/ui/nav_item", label: "Contracts", url: contracts_path, icon: "receipt", active: controller_name == "contracts" %>
    </nav>
  </div>

  <div class="space-y-3 border-t border-white/10 pt-4" data-testid="sidebar-group-registers">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/40">Registers</p>
    <nav class="space-y-2 sidebar-nav">
      <%= render "shared/ui/nav_item", label: "Milestones", url: delivery_milestones_path, icon: "flag", active: controller_name == "delivery_milestones" %>
      <%= render "shared/ui/nav_item", label: "Delivery units", url: delivery_units_path, icon: "truck", active: controller_name == "delivery_units" %>
    </nav>
  </div>

  <div class="space-y-3 border-t border-white/10 pt-4" data-testid="sidebar-group-knowledge-center">
    <p class="text-xs uppercase tracking-[0.2em] text-light-text/40">Knowledge Center</p>
    <nav class="space-y-2 sidebar-nav">
      <%= render "shared/ui/nav_item", label: "Knowledge Center", url: docs_path, icon: "document", active: request.path.start_with?(docs_path) %>
    </nav>
  </div>

  <div class="mt-auto space-y-4">
    <details class="relative group">
      <summary class="flex items-center gap-3 rounded-2xl border border-white/10 bg-white/5 p-3 text-left cursor-pointer focus-ring list-none" aria-label="Account menu">
        <div class="h-10 w-10 rounded-full bg-white/10"></div>
        <div class="flex-1">
          <p class="text-sm font-semibold"><%= current_user.first_name.presence || "Account" %></p>
          <p class="text-xs text-light-text/50"><%= current_user.email %></p>
        </div>
        <svg class="icon-sm text-light-text/50 transition group-open:rotate-180" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 9l6 6 6-6" />
        </svg>
      </summary>
      <div class="absolute bottom-full left-0 right-0 mb-3 rounded-2xl border border-white/10 bg-dark-panel-strong p-3 shadow-lg">
        <div class="space-y-2 text-sm">
          <%= link_to "Profile", profile_path, class: "flex w-full items-center justify-between rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-light-text/80 hover:text-light-text hover:bg-white/10 focus-ring" %>
          <%= button_to "Sign out",
                        destroy_user_session_path,
                        method: :delete,
                        form_class: "w-full",
                        class: "w-full rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-left text-sm text-light-text/80 hover:text-light-text hover:bg-white/10 focus-ring" %>
        </div>
      </div>
    </details>
  </div>
</aside>
