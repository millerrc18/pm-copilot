<% classes = [
  "group flex items-center gap-3 rounded-2xl px-4 py-3 text-sm font-medium transition",
  "hover:bg-white/5 hover:text-light-text",
  (local_assigns[:active] ? "bg-accent-red/20 text-light-text shadow-glow" : "text-light-text/70")
].join(" ") %>

<% icon = case local_assigns[:icon]
   when "folder"
     '<svg class="icon-sm" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 7.5a2 2 0 012-2h4l2 2h8a2 2 0 012 2V17a2 2 0 01-2 2H5a2 2 0 01-2-2V7.5z"/></svg>'
   when "document"
     '<svg class="icon-sm" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M7 4h6l4 4v12a2 2 0 01-2 2H7a2 2 0 01-2-2V6a2 2 0 012-2z"/><path stroke-linecap="round" stroke-linejoin="round" d="M13 4v5h5"/></svg>'
   when "receipt"
     '<svg class="icon-sm" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M7 3h10v18l-2-1-2 1-2-1-2 1-2-1-2 1V3z"/><path stroke-linecap="round" stroke-linejoin="round" d="M9 8h6M9 12h6M9 16h4"/></svg>'
   when "currency"
     '<svg class="icon-sm" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v18"/><path stroke-linecap="round" stroke-linejoin="round" d="M16.5 7.5a4.5 4.5 0 01-4.5 4.5 4.5 4.5 0 004.5 4.5"/><path stroke-linecap="round" stroke-linejoin="round" d="M7.5 7.5A4.5 4.5 0 0112 3"/></svg>'
   when "flag"
     '<svg class="icon-sm" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4 21V4a1 1 0 011-1h11l-1.5 4H20l-1.5 4H5"/><path stroke-linecap="round" stroke-linejoin="round" d="M5 3v14"/></svg>'
   when "truck"
     '<svg class="icon-sm" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 7h11v8H3z"/><path stroke-linecap="round" stroke-linejoin="round" d="M14 9h4l3 3v3h-7V9z"/><path stroke-linecap="round" stroke-linejoin="round" d="M6 18a2 2 0 104 0"/><path stroke-linecap="round" stroke-linejoin="round" d="M16 18a2 2 0 104 0"/></svg>'
   else
     '<svg class="icon-sm" viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="9"/></svg>'
   end %>

<%= link_to local_assigns[:url], class: "#{classes} focus-ring", data: { action: "click->sidebar#close" } do %>
  <span class="flex h-8 w-8 items-center justify-center rounded-xl bg-white/5 text-light-text/80">
    <span class="icon-sm"><%= icon.html_safe %></span>
  </span>
  <span><%= local_assigns[:label] %></span>
<% end %>
