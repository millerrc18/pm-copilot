<div class="glass-card">
  <div class="glass-card-body">
    <% if local_assigns[:icon].present? %>
      <% icon = case local_assigns[:icon]
         when "pin"
           '<svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 4l5 5-4 1-3 7-3-3-7 3 3-7-1-4 5 5z"/><path stroke-linecap="round" stroke-linejoin="round" d="M12 12l-8 8"/></svg>'
         when "stack"
           '<svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 7l9-4 9 4-9 4-9-4z"/><path stroke-linecap="round" stroke-linejoin="round" d="M3 12l9 4 9-4"/><path stroke-linecap="round" stroke-linejoin="round" d="M3 17l9 4 9-4"/></svg>'
         when "chart"
           '<svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 3v18h18"/><path stroke-linecap="round" stroke-linejoin="round" d="M7 14l4-4 3 3 5-6"/></svg>'
         when "compass"
           '<svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="9"/><path stroke-linecap="round" stroke-linejoin="round" d="M14.5 9.5l-5 2-2 5 5-2 2-5z"/></svg>'
         when "link"
           '<svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 13a5 5 0 007.07 0l2.83-2.83a5 5 0 10-7.07-7.07L10 5"/><path stroke-linecap="round" stroke-linejoin="round" d="M14 11a5 5 0 00-7.07 0L4.1 13.83a5 5 0 107.07 7.07L14 19"/></svg>'
         when "sparkles"
           '<svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3l1.8 4.2L18 9l-4.2 1.8L12 15l-1.8-4.2L6 9l4.2-1.8L12 3z"/><path stroke-linecap="round" stroke-linejoin="round" d="M18 15l.9 2.1L21 18l-2.1.9L18 21l-.9-2.1L15 18l2.1-.9L18 15z"/></svg>'
         when "wand"
           '<svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 4l5 5M4 20l9-9"/><path stroke-linecap="round" stroke-linejoin="round" d="M7 4v3M4 7h3M18 17v3M17 18h3"/></svg>'
         else
           '<svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="9"/></svg>'
         end %>
      <div class="card-icon"><%= icon.html_safe %></div>
    <% end %>

    <% if local_assigns[:title].present? %>
      <h3 class="card-title"><%= local_assigns[:title] %></h3>
    <% end %>

    <% if local_assigns[:description].present? %>
      <p class="card-meta"><%= local_assigns[:description] %></p>
    <% end %>

    <%= yield if block_given? %>

    <% if local_assigns[:footer].present? %>
      <div class="card-footer">
        <%= local_assigns[:footer] %>
      </div>
    <% end %>
  </div>
</div>
