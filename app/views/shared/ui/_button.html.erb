<% variant = local_assigns[:variant] || "secondary" %>
<% base = "inline-flex items-center justify-center gap-2 rounded-full px-4 py-2 text-sm font-semibold transition focus-ring" %>
<% variant_class = case variant
   when "primary" then "#{base} bg-accent-red text-white hover:bg-accent-red/90"
   when "ghost" then "#{base} bg-transparent text-light-text/70 hover:text-light-text hover:bg-white/5"
   when "icon" then "inline-flex items-center justify-center rounded-full p-2 text-light-text/70 hover:text-light-text hover:bg-white/10 transition focus-ring"
   else "#{base} border border-white/10 bg-white/5 text-light-text/80 hover:bg-white/10"
   end %>

<% if local_assigns[:url].present? %>
  <%= link_to local_assigns[:label], local_assigns[:url], class: variant_class %>
<% else %>
  <%= button_tag local_assigns[:label], type: "button", class: variant_class %>
<% end %>
