<% flash.each do |type, message| %>
  <% next if message.blank? %>

  <% classes = case type.to_s
     when "notice" then "border-emerald-400/40 bg-emerald-400/10"
     when "alert" then "border-accent-red/40 bg-accent-red/10"
     else "border-white/10 bg-white/5"
     end %>

  <div class="mb-4 rounded-2xl border px-4 py-3 text-sm text-light-text <%= classes %>">
    <%= message %>
  </div>
<% end %>
