<% theme = current_user&.theme.presence || "light" %>
<% palette = current_user&.palette.presence || "blue" %>
<!DOCTYPE html>
<html data-theme="<%= theme %>" data-palette="<%= palette %>">
  <head>
    <title>PM Copilot</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="topbar">
      <div class="container topbar-inner">
        <% home_path = user_signed_in? ? programs_path : new_user_session_path %>

        <%= link_to(home_path, class: "brand") do %>
          <span class="brand-badge" aria-hidden="true"></span>
          <span>PM Copilot</span>
        <% end %>

        <div class="topbar-actions">
          <% if user_signed_in? %>
            <span class="subtle topbar-email"><%= current_user.email %></span>

            <%= form_with model: current_user,
                          url: theme_preference_path,
                          method: :patch,
                          class: "theme-controls" do |form| %>
              <%= form.label :theme, "Theme" %>
              <%= form.select :theme,
                              options_for_select(User::THEME_OPTIONS.map { |option| [option.titleize, option] }, theme) %>
              <%= form.label :palette, "Palette" %>
              <%= form.select :palette,
                              options_for_select(User::PALETTE_OPTIONS.map { |option| [option.titleize, option] }, palette) %>
              <%= form.submit "Apply", class: "btn btn-sm" %>
            <% end %>

            <%= link_to "Programs", programs_path, class: "btn btn-sm" %>
            <%= link_to "New program", new_program_path, class: "btn btn-primary btn-sm" %>

            <%= button_to "Sign out",
                          destroy_user_session_path,
                          method: :delete,
                          class: "btn btn-sm" %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path, class: "btn btn-sm btn-primary" %>
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-sm" %>
          <% end %>
        </div>
      </div>
    </header>

    <main class="container main">
      <%= render "shared/flash" %>
      <%= yield %>
    </main>
  </body>
</html>
