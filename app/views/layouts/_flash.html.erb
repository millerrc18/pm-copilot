<% flash.each do |type, message| %>
  <% next if message.blank? %>

  <% classes = case type.to_s
     when "notice" then "border-emerald-400/40 bg-emerald-400/10 text-emerald-50"
     when "alert" then "border-accent-red/40 bg-accent-red/10 text-rose-100"
     else "border-white/10 bg-white/5 text-light-text"
     end %>

  <div class="pointer-events-auto rounded-lg border px-4 py-3 text-sm shadow-md <%= classes %>"
       data-controller="dismiss"
       data-dismiss-timeout-value="5000">
    <div class="flex items-start justify-between gap-3">
      <p class="leading-5"><%= message %></p>
      <button type="button" class="text-xs opacity-70 hover:opacity-100"
              data-action="dismiss#close" aria-label="Dismiss">âœ•</button>
    </div>
  </div>
<% end %>
